{% extends 'base.html.twig' %}

{% block title %}TipoPublicacion{% endblock %}

{% block body %}
    <h1 style="text-align:center" class="font-weight-bold">Tipo de publicacion</h1>
    <div class="container" style="font-family: Arial, Helvetica, sans-serif; margin-top:2rem; font-weight:bold;">
        <div class="border border-secondary rounded p-3 shadow mb-5 bg-white ">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ tipo_publicacion.id }}</td>
                    </tr>
                    <tr>
                        <th>Nombre</th>
                        <td>{{ tipo_publicacion.nombre }}</td>
                    </tr>
                </tbody>
            </table>
            <div class="container">
                <div class="row mt-5">
                    <div class="col-4">
                        <a href="{{ path('tipo_publicacion_index') }}">
                            <button type="button" class="btn btn-info"> 
                                Back to list <i class="fas fa-arrow-left"></i> 
                            </button>  
                        </a>
                    </div>
                    <div class="col-4 text-center">
                        <a href="{{ path('tipo_publicacion_edit', {'id': tipo_publicacion.id}) }}">
                            <button type="button" class="btn btn-success"> 
                                Edit <i class="fas fa-edit"></i>
                            </button> 
                        </a>
                    </div>
                    <div class="col-4 text-right">
                        {{ include('tipo_publicacion/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
