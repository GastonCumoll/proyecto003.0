{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

<div class="w-75 mb-2" style="margin:auto;">
    <h1 style="text-align:center" class="font-weight-bold">Usuarios registrados</h1>

    <div class="border border-secondary rounded p-3">
        <table class="table table-striped table-bordered  table-hover" id="datatable">
            <thead class="thead-dark">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Publicaciones</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for User in users %}
                <tr>
                    <td>{{ User.id }}</td>
                    <td>{{ User.email }}</td>
                    <td>{{ User.roles ? User.roles|json_encode : '' }}</td>
                    <td>{{ User.password }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': User.id}) }}">
                            <button type="button" class="btn btn-outline-primary" style="width: 5rem;">Show</button>
                        </a>
                        <a href="{{ path('user_edit', {'id': User.id}) }}">
                            <button type="button" class="btn btn-outline-info" style="width: 5rem;">Edit</button>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <br><br>
        <a href="{{ path('user_new') }}"><button type="button" class="btn btn-outline-primary" style="width: 5rem;">Crear</button></a>
    </div>
</div>

    
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready( function () {
    $('#datatable').DataTable();
    
} );
</script>
{% endblock %}
